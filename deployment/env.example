# Rudnex Digital Hub - Environment Configuration Example
# Copy this file to .env and update with your actual values

# =============================================================================
# API Configuration
# =============================================================================
SECRET_KEY=rudnex-secret-key-2025-super-secure-change-this-in-production
ADMIN_TOKEN=rudnex-admin-2025-change-this-in-production

# =============================================================================
# OpenAI API (Optional - fallback logic available)
# =============================================================================
OPENAI_API_KEY=your-openai-api-key-here

# =============================================================================
# Email Configuration (Required for contact forms)
# =============================================================================
SMTP_SERVER=mail.rudnex.com
SMTP_PORT=587
EMAIL_USER=support@rudnex.com
EMAIL_PASSWORD=your-gmail-app-password

# Alternative: SendGrid
# SMTP_SERVER=smtp.sendgrid.net
# SMTP_PORT=587
# EMAIL_USER=apikey
# EMAIL_PASSWORD=your-sendgrid-api-key

# =============================================================================
# Production URLs
# =============================================================================
FRONTEND_URL=https://rudnex.com
BACKEND_URL=https://api.rudnex.com

# =============================================================================
# Database Configuration
# =============================================================================
# SQLite (default)
DATABASE_URL=sqlite:///./rudnex_digital.db

# PostgreSQL (for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/rudnex_digital

# =============================================================================
# PostgreSQL (if using PostgreSQL)
# =============================================================================
POSTGRES_USER=rudnex
POSTGRES_PASSWORD=rudnex_password
POSTGRES_DB=rudnex_digital

# =============================================================================
# Frontend Environment Variables
# =============================================================================
VITE_API_URL=https://api.rudnex.com
VITE_APP_NAME=Rudnex Digital Hub

# =============================================================================
# Optional: Redis Configuration
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# Optional: Monitoring
# =============================================================================
SENTRY_DSN=your-sentry-dsn-here
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# =============================================================================
# Optional: CDN Configuration
# =============================================================================
CDN_URL=https://cdn.rudnex.com

# =============================================================================
# Optional: SSL Configuration
# =============================================================================
SSL_CERT_PATH=/etc/nginx/ssl/rudnex.com.crt
SSL_KEY_PATH=/etc/nginx/ssl/rudnex.com.key
